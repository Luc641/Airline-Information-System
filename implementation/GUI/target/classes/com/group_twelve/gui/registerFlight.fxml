<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" >
  <children>
    <MenuBar fx:id="btnGoBack" VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Go back" />
      </menus>
    </MenuBar>
    <AnchorPane fx:id="registerFlightPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <TextField id="btnFlightId" fx:id="txtFlightId" layoutX="14.0" layoutY="14.0" prefHeight="27.0" prefWidth="183.0" promptText="Flight ID" />
            <TextField id="btnFlightId" fx:id="txtDepartureAirport" layoutX="14.0" layoutY="54.0" prefHeight="27.0" prefWidth="183.0" promptText="Departure Airport" />
            <TextField id="btnFlightId" fx:id="txtArrivalAirport" layoutX="14.0" layoutY="97.0" prefHeight="27.0" prefWidth="183.0" promptText="Arrival Airport" />
            <DatePicker fx:id="dpDeparture" layoutX="12.0" layoutY="144.0" promptText="Departure Date/Time" />
            <DatePicker fx:id="dpArrival" layoutX="12.0" layoutY="186.0" promptText="Arrival Date/Time" />
            <TextField fx:id="txtRoute" layoutX="14.0" layoutY="317.0" prefHeight="27.0" prefWidth="183.0" promptText="Route" />
            <TextField fx:id="txtPlaneId" layoutX="14.0" layoutY="273.0" prefHeight="27.0" prefWidth="183.0" promptText="Plane ID" />
            <TextField fx:id="txtCrewId" layoutX="14.0" layoutY="231.0" prefHeight="27.0" prefWidth="183.0" promptText="Crew ID" />
            <TextArea fx:id="txtOptionalRemarkt" layoutX="222.0" layoutY="12.0" prefHeight="333.0" prefWidth="252.0" promptText="Additional remarkt (optional)" />
            <Button fx:id="btnAccept" defaultButton="true" layoutX="512.0" layoutY="20.0" mnemonicParsing="false" onAction="#getFlightData" prefHeight="68.0" prefWidth="100.0" text="Submit" textAlignment="CENTER" />
            <Button fx:id="btnCancel" cancelButton="true" layoutX="512.0" layoutY="110.0" mnemonicParsing="false" prefHeight="68.0" prefWidth="100.0" text="Cancel" textAlignment="CENTER" />
      </children>
    </AnchorPane>
  </children>
</VBox>
